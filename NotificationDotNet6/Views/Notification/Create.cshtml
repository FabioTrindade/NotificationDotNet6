@model NotificationDotNet6.Domain.Commands.Notification.NotificationCreateCommand

@{
    ViewData["Title"] = "Notification Create";
}

<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("Create", "Notification", FormMethod.Post, new { id = "frmNotificationCreate" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">@ViewData["Title"]</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Header)
                        @Html.TextBoxFor(m => m.Header, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Body)
                        @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Url)
                        @Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromUserId)
                        @Html.TextBoxFor(m => m.FromUserId, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ToUserId)
                        @Html.TextBoxFor(m => m.ToUserId, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <a class="btn btn-danger" asp-controller="Notification" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}